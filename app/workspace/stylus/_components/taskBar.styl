@require '../_includes/vars'

.task-bar
  position: fixed
  top: 0
  left: 0
  background-color: rgba($medium, 0.8)
  height: $button-height
  width: 100vw
  -webkit-app-region: drag
  // border-bottom: 1px solid lighten($medium, 20%)
  z-index: 1000

  nav.main
    padding-left: 80px
    display: flex
    align-items: center
    justify-content: space-between

    button, .selector
      margin-left: -8px

    button
      border-right: 1px solid darken($blue, 30%)
      border-radius: 0px

  nav.sub
    background-color: lighten($dark, 10%)
